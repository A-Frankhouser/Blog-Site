{{!-- The Post Template--}}

<article class="post">

    {{!-- Post Title --}}
    <div class="post-title">
        <a href="/post/{{id}}">{{title}}</a>
    </div>

    {{!-- Post Content --}}
    <div class="post-content">
        {{post_content}}
    </div>

    {{!-- username & date_created --}}
    <div class="us-dc">
        Post created by {{user.username}} on {{format_date date_created}}
    </div>

</article>