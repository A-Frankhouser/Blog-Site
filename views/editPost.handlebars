    {{!-- Edit Post Form --}}
<article>
    <a href="/dashboard">Back to dashboard</a>

    <h2>Edit Post</h2>

    <form class="edit-post-form">
            {{!-- Post title --}}
        <div>
            <input type="text" name="post-title" value="{{post.title}}" />
        </div>

            {{!-- post_content --}}
        <div>
            <textarea name="post_content"></textarea>
        </div>

            {{!-- Comments/date_created --}}
        <div>
            <p>Posted by you on {{format_date post.date_created}}</p>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>

            {{!-- Buttons --}}
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
    </form>
</article>

    {{!-- Comment Form --}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add  comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/js/comment.js"></script>
<script src="/js/delete_post.js"></script>
<script src="/js/edit_post.js"></script>