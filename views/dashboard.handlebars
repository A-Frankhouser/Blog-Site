{{!-- Users Dashboard --}}

{{!-- User's posts --}}
{{#if posts.length}}
<section>
    <h2 class="dashboard-header">These are all your posts!</h2>

    {{!-- Posts --}}
    <ol class="post-list">
    {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
    {{/each}}
    </ol>
</section>
{{/if}}

<section>
    {{!-- Create Post Btn --}}
    <h2>+ Create a Post</h2>

    {{!-- New post form --}}
    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">Content</label>
            <textarea name="post-content"></textarea>
        </div>
        <button type="submit" class="btn">+ Create</button>
    </form>
</section>

<script src="/js/add_post.js"></script>